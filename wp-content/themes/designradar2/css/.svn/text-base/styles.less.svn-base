/* BIG THUMBNAIL */

div.thumbnail-big {
	position: relative;
	
	width: 200px;
	height: 145px;
	
	padding: 11px;
	margin: 0 0 30px 30px;
	float: left;
	background: white;

	div.image {
		position: absolute;
		top: 11px;
		left: 11px;
	
		width: 200px;
		height: 145px;
		background: green;
	}
	
	div.overlay {
		position: absolute;
		top: 11px;
		left: 11px;		
		padding: 11px;
		
		background: rgba(255,255,255,0.8);
	
		width: 178px;
		height: 123px;
		
		text-align: center;
		
		h2 {
			
		}
		
		span {
			display: block;
		}
		
		div.menu {
			position: absolute;
			bottom: 11px;
			width: 178px;
			
			ul {
				width: 96px;
				margin: 0 auto;
			}
			
			li {
				width: 32px;
				height: 32px;
				float: left;
			}
		}
	}
}


